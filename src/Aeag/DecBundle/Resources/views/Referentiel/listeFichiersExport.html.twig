{% block scripts %}
 
       $('#idMessage1').hide();
            $('#idMessage2').hide();
            $('#idAttente').hide();
            {% for fichier in fichiers %}
                $('#confirme_{{fichier.indice}}').click(function (e) {
                        e.preventDefault();
                        $('#idMessage1').show();
                        $('#idAttente').show();
                        $('#idMessage2').hide();
                        $('#ficent').val('{{fichier.nom}}');
                        $('form').submit();
                        return false;
                    });
               {% endfor %}

            {% if message %}
               $('#idMessage1').hide(); 
               $('#idAttente').hide(); 
               $('#idMessage2').show();
            {%endif%}
  {% endblock scripts %}