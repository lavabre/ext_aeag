{% extends "AeagDecBundle::layout.html.twig" %}

{% block breadcrumb %}
          <li>
          <i class="icon-home"></i>
          <a href="{{ path('aeag_homepage') }}">Accueil</a> 
           <i class="fa fa-angle-right"></i>
       </li>
       <li class="active">
           Producteurs non plafonnés
       </li>
{% endblock breadcrumb %}


{%block panel_heading %}
       <h3>
            Liste des producteurs non plafonnés
            <a class="btn btn-primary pull-right" href="{{ path('AeagDecBundle_admin_pdfListeProducteurNonPlafonne') }}" title="Imprimer la lister"> 
                <i class="fa fa-print"> Imprimer la liste</i>
            </a>
       </h3>
 {%endblock panel_heading %}

{%block content %}
       
     {% if is_granted('ROLE_ADMINDEC') %} 
        <div class="row">
            <div class="offset3 col-xm9">
                <a class="btn btn-success" href="{{ path('AeagDecBundle_admin_ProducteurNonPlafonne_ajouter') }}" title="Ajouter">
                    <i class="fa fa-plus"> Nouveau</i>
                </a>
            </div>
        </div> 
     {% endif %}
  
       
     <div class="row">
          <div class="col-md-12">
              <div class="small ">
                  <table class="table table-bordered table-condensed table-advance" id="idTable">
                        <thead>
                           <tr>
                               {% if is_granted('ROLE_ADMINDEC') %} 
                                <th width="1%">Actions</th>
                               {% endif %}
                                <th>Siret</th>
                                <th>Raison sociale</th>
                                {% if is_granted('ROLE_ADMINDEC') %} 
                                <th>Aidable</th>
                               {% endif %}
                              </tr>
                        </thead>
                        <tbody>
                             {% for entity in entities %}
                             {% if is_granted('ROLE_ADMINDEC') %}
                                {%if  entity.0.aidable == 'N' %}
                                  <tr style="background-color:#f2dede;">
                                {%else%}
                                   <tr>
                                {%endif%}
                                     <td nowrap>
                                        <a class="btn btn-warning" href="{{ path('AeagDecBundle_admin_ProducteurNonPlafonne_editer', { 'siret': entity.0.siret }) }}" title="Editer">
                                            <i class="fa fa-edit"></i> 
                                        </a>
                                    </td>
                                {% else %}
                                    <tr>
                                {% endif %}
                                    <td>{{ entity.0.siret }}</td>
                                    <td>
                                     {%if entity.Correspondant %}
                                        {{ entity.Correspondant.adr1 }}&nbsp;{{ entity.Correspondant.adr2 }}
                                     {%else%}
                                        {{ entity.0.libelle }}  
                                     {%endif%}
                                    </td>
                                    {% if is_granted('ROLE_ADMINDEC') %}
                                    <td align="center">{{ entity.0.aidable }}</td>
                                    {% endif %}
                                  </tr>
                             {% endfor %}
                        </tbody>
                     </table>
            </div>
          </div>
        </div>
 {%endblock content %}
 
{% block scripts %}
     
       // DataTable
          var table = $('#idTable').DataTable(
                      {"stateSave": true,
                       "oLanguage": {
                          "sSearch": "Filtre",
                          "sFirst": "1ere page",
                          "sLast": "Dernière page",
                          "sNext": "Prochaine page",
                          "sPrevious": "Page précédente",
                          "EmptyTable": "Pas de données",
                          "sInfo": "Nombre d'enregistrements :  _TOTAL_",
                          "sInfoFiltered": " - filtrés sur _MAX_ enregistrements",
                          "sZeroRecords": "Pas d'enregistrement à afficher",
                          "sInfoEmpty": "Pas d'enregistrement à afficher",
                          "sInfoThousands": " ",
                          "sLengthMenu": 'Afficher <select>' +
                                  '<option value="10">10</option>' +
                                  '<option value="20">20</option>' +
                                  '<option value="30">30</option>' +
                                  '<option value="40">40</option>' +
                                  '<option value="50">50</option>' +
                                  '<option value="-1">Tous</option>' +
                                  '</select> enregistrements',
                          "sPaginationType": "full_numbers"
                      }
                     }
                    );
   {% endblock scripts %}  
   
