{% extends "AeagDecBundle::layout.html.twig" %}

{% block breadcrumb %}
    <li>
        <i class="icon-home"></i>
        <a href="{{ path('aeag_homepage') }}">Accueil</a>
        <i class="fa fa-angle-right"></i>
    </li>
    <li class="active">
        Producteurs avec un taux d' aide spécial
    </li>
{% endblock breadcrumb %}


{%block panel_heading %}
    <h3>
        Liste des producteurs avec un taux d'aide spécial
        <a class="btn btn-primary pull-right" href="{{ path('AeagDecBundle_admin_pdfListeProducteurTauxSpecial') }}" title="Imprimer la lister">
            <i class="fa fa-print"> Imprimer la liste</i>
        </a>
    </h3>
{%endblock panel_heading %}

{%block content %}

    <div class="row">
        <div class="alert alert-success text-center" role="alert"><h4>L'aide bonifiée se calcule automatiquement pour chaque siret référencé  dans cette liste.</h4></div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="small ">
                <table class="table table-bordered table-condensed table-advance" id="idTable">
                    <thead>
                        <tr>
                            <th>Siret</th>
                            <th>Raison sociale</th>
                            <th>Localisation</th>
                            <th>Taux</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td>{{ entity.0.siret }}</td>
                                <td>
                                    {%if entity.Ouvrage %}
                                        {{ entity.Ouvrage.libelle }}
                                    {%else%}
                                        Non référencé
                                    {%endif%}
                                </td>
                                <td>
                                    {%if entity.Ouvrage %}
                                        {{ entity.Ouvrage.cp }} {{ entity.Ouvrage.ville }}
                                    {%else%}
                                        Non référencé
                                    {%endif%}
                                </td>
                                <td align="center">{{ entity.0.taux  | number_format(2,'.',' ')}} %</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{%endblock content %}

{% block scripts %}

    // DataTable
    var table = $('#idTable').DataTable(
    {"stateSave": true,
    "oLanguage": {
    "sSearch": "Filtre",
    "sFirst": "1ere page",
    "sLast": "Dernière page",
    "sNext": "Prochaine page",
    "sPrevious": "Page précédente",
    "EmptyTable": "Pas de données",
    "sInfo": "Nombre d'enregistrements :  _TOTAL_",
    "sInfoFiltered": " - filtrés sur _MAX_ enregistrements",
    "sZeroRecords": "Pas d'enregistrement à afficher",
    "sInfoEmpty": "Pas d'enregistrement à afficher",
    "sInfoThousands": " ",
    "sLengthMenu": 'Afficher <select>' +
        '<option value="10">10</option>' +
        '<option value="20">20</option>' +
        '<option value="30">30</option>' +
        '<option value="40">40</option>' +
        '<option value="50">50</option>' +
        '<option value="-1">Tous</option>' +
        '</select> enregistrements',
    "sPaginationType": "full_numbers"
    }
    }
    );
{% endblock scripts %}

