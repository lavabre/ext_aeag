{% extends "AeagEdlBundle::layout.html.twig" %}

{% block breadcrumb %}
          <li>
          <i class="icon-home"></i>
          <a href="{{ path('aeag_homepage') }}">Accueil</a> 
           <i class="fa fa-angle-right"></i>
       </li>
        {% endblock breadcrumb %}
        
 {%block panel_heading %}
    <h3 class="page-title">
       Etat des ieux
    </h3>
  {%endblock panel_heading %}


{% block content %}
  
    <form class="form" id="form_recherche" action="{{ path('AeagEdlBundle_homepage') }}" method="post">
    <table class="table" cellspacing="0" width="100%" align="center">
        <thead>
            <tr>
                <th>DÃ©partement</th>
                <th>Type</th>   
                <th>Code</th>
                <th>Masse d'eau</th>
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <th>Mes masses d'eau</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
            <tr>
                <td align="left">
                    <div class="check-error">{{ form_errors(form.deptcle) }}</div>
                    <div class="full-width">{{ form_widget(form.deptcle, { 'attr': {'preferred_choices': app.session.get('deptcle'), 'separator': '=====' } } ) }}</div>
                </td>
                <td align="left">
                    <div class="check-error">{{ form_errors(form.typecle) }}</div>
                    <div class="full-width">{{ form_widget(form.typecle, { 'attr': {'preferred_choices': app.session.get('typecle'), 'separator': '=====' } }) }}</div>
                </td>
                <td align="left">
                    <div class="check-error">{{ form_errors(form.codecle) }}</div>
                        {{ form_widget(form.codecle, { 'attr': {'value': app.session.get('codecle')} }) }}
                </td>
                <td align="left">
                    <div class="check-error">{{ form_errors(form.massecle) }}</div>
                        {{ form_widget(form.massecle, { 'attr': {'value': app.session.get('masseEaucle') } })}}
                </td>
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <td align="center">
                    <div class="align-center">
                        <div class="check-error">{{ form_errors(form.territoirecle) }}</div>
                        <div class="checkbox">{{ form_widget(form.territoirecle)}}</div>
                     </div>
                </td>
                    {% endif %}
            </tr>

        </tbody>
    </table>
    <br>
    <div class="align-center"> 
        <table width="100%">
            <tr>
                <td width="50%" align="right">
                    <button type="submit" class="button-red">Rechercher</button>
                </td>
                <td align="left">
                    <div class="loading"> </div>
                </td>
            </tr>
        </table>
     </div>
</form>




{% endblock %}

 {% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
    $(document).ready(function() { 
  
    $(".loading").hide();
    
    
    
    $("#masseeaurecherche_deptcle").val('{{app.session.get('deptcle')}}');
    $("#masseeaurecherche_typecle").val('{{ app.session.get('typecle') }}');
    $("#masseeaurecherche_codecle").val('{{ app.session.get('codecle') }}');
    $("#masseeaurecherche_massecle").val('{{ app.session.get('masseEaucle') }}');
    $("#masseeaurecherche_territoirecle").val('{{ app.session.get('territoirecle') }}');
    
     {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
           $("#masseeaurecherche_territoirecle").val("1");
          
     {% endif %}
      
    
    
     if ($("#masseeaurecherche_territoirecle").val() == "1")
             {
              $("#masseeaurecherche_territoirecle").attr('checked', 'checked');
             }
          else
              { 
               $("#masseeaurecherche_territoirecle").removeAttr('checked');
              };
  

    });
 </script>
 
 {% endblock %}