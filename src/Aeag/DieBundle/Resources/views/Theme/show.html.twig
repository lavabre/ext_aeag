{% extends "AeagDieBundle::layout.html.twig" %}

{% block breadcrumb %}
    <li>
        <a href="{{ path('aeag_die') }}">Accueil</a> 
    </li>
    <li>
        <a href="{{ path('theme') }}">Thème</a> 
    </li>
     <li class="active">
        {{ entity.theme }}
    </li>
{% endblock breadcrumb %} 

{%block panel_heading %}
             <h3 class="page-title text-center">
               Thème : {{ entity.theme }}
             </h3>
  {%endblock panel_heading %}


{% block content %}
    
     <div class="row">
         <div class="form-group">
            <label for="ordre" class="col-xs-offset-2 col-xs-2 control-label">Id</label>
              <div class="col-xs-3 input-group">
               {{ entity.id }}
             </div>
         </div> 
             
         <div class="form-group">
            <label for="ordre" class="col-xs-offset-2 col-xs-2 control-label">N° ordre</label>
              <div class="col-xs-3 input-group">
               {{ entity.ordre }}
             </div>
         </div> 
             
         <div class="form-group">
            <label for="ordre" class="col-xs-offset-2 col-xs-2 control-label">Thème</label>
              <div class="col-xs-3 input-group">
               {{ entity.theme }}
             </div>
         </div> 
             
     </div>


<div class="form-group">
    <div class="col-xs-offset-4 col-xs-7">
       <a class="btn btn-primary" href="{{ path('theme') }}"><i class="fa fa-power-off"></i> Retour</a>
    </div>
</div>

{% endblock content %}
