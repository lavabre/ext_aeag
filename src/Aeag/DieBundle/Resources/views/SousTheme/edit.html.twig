                {% endif %}  
                </td>
                <td nowrap><div class="symfony-form-errors">{{ form_errors(edit_form.objet) }}</div></td>
            </tr>
             <tr>
                <td align="right">{{ form_label(edit_form.corps, "Corps") }}</td>
