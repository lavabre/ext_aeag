{% extends "AeagDieBundle::layout.html.twig" %}

{% block contenu %}
<div align="center">
   <h1>Mise  à jour du sous-thème : {{ entity.sousTheme }}</H1>
</div>
<br>

<form class="form" action="{{ path('soustheme_update', { 'id': entity.id }) }}"
	method="post"  {{ form_enctype(edit_form) }}>
	{{ form_errors(edit_form) }}

<table align="center">
  	 <tr>
                <td align="right" width="35%">{{ form_label(edit_form.theme) }}</td>
                <td width="65%" align="left">
                {% if form_errors(edit_form.theme) | length %}
                   <span class="relative"> 
                    {{ form_widget(edit_form.theme, { 'attr': {'class': 'full-width error'} }) }}
                    <span class="check-error"></span>
                {% else %}
                  {{ form_widget(edit_form.theme, { 'attr': {'class': 'full-width'} }) }}
                {% endif %}  
                </td>
                <td nowrap><div class="symfony-form-errors">{{ form_errors(edit_form.theme) }}</div></td>
         </tr>
          <tr>
               <td align="right" >{{ form_label(edit_form.sousTheme,'Sous-thème') }}</td>
                <td align="left"> 
                {% if form_errors(edit_form.sousTheme) | length %}
                   <span class="relative"> 
                    {{ form_widget(edit_form.sousTheme, { 'attr': {'class': 'full-width error'} }) }}
