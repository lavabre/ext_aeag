{% extends "AeagDieBundle::layout.html.twig" %}

{% block breadcrumb %}
    <li>
        <a href="{{ path('aeag_die') }}">Accueil</a> 
    </li>
    <li>
        <a href="{{ path('soustheme') }}">Formulaire</a> 
    </li>
     <li class="active">
        {{ entity.soustheme }}
    </li>
{% endblock breadcrumb %} 

{%block panel_heading %}
             <h3 class="page-title text-center">
               Formulaire : {{ entity.sousTheme }}
             </h3>
  {%endblock panel_heading %}


{% block content %}
    
     <div class="row">
         <div class="form-group">
            <label for="ordre" class="col-xs-offset-2 col-xs-2 control-label">Id</label>
              <div class="col-xs-3 input-group">
               {{ entity.id }}
             </div>
         </div> 
             
          <div class="form-group">
            <label for="ordre" class="col-xs-offset-2 col-xs-2 control-label">Th√®me</label>
              <div class="col-xs-3 input-group">
               {{ entity.theme.theme }}
             </div>
         </div> 
             
           <div class="form-group">
            <label for="ordre" class="col-xs-offset-2 col-xs-2 control-label">Formulaire</label>
              <div class="col-xs-3 input-group">
               {{ entity.sousTheme }}
             </div>
         </div> 
             
         <div class="form-group">
            <label for="ordre" class="col-xs-offset-2 col-xs-2 control-label">Destinataire</label>
              <div class="col-xs-3 input-group">
               {{ entity.destinataire}}
             </div>
         </div> 
             
         <div class="form-group">
            <label for="ordre" class="col-xs-offset-2 col-xs-2 control-label">Objet</label>
              <div class="col-xs-3 input-group">
               {{ entity.objet }}
             </div>
         </div> 
             
           <div class="form-group">
            <label for="ordre" class="col-xs-offset-2 col-xs-2 control-label">Corps</label>
              <div class="col-xs-3 input-group">
                  {{ entity.corps | nl2br }}
             </div>
         </div> 
            
     </div>


<div class="form-group">
    <div class="col-xs-offset-4 col-xs-7">
       <a class="btn btn-primary" href="{{ path('soustheme') }}"><i class="fa fa-power-off"></i> Retour</a>
    </div>
</div>

{% endblock content %}

