{% extends "AeagDieBundle::layout.html.twig" %}

{% block breadcrumb %}
    <li>
        <a href="{{ path('aeag_homepage') }}">Accueil</a> 
    </li>
    <li>
        <a href="{{ path('soustheme') }}">Sous Thème</a> 
    </li>
    <li class="active">
        Nouveau
    </li>
{% endblock breadcrumb %} 

{%block panel_heading %}
    <h3 class="page-title text-center">
        Création d'un sous-thème
    </h3>
{%endblock panel_heading %}


{% block content %}

    <form class="form" action="{{ path('soustheme_create') }}" method="post" {{ form_enctype(form) }}>

        {% spaceless %}
            {% if not form.vars.valid %}
                <div class="alert alert-danger">
                    {% for children in form.children %}
                        {% if not children.vars.valid %}
                            {{ form_errors(children) }}
                        {% endif %}
                    {% endfor %}
                </div>
            {% endif %}
        {% endspaceless %}        

        <div class="form-group">
            <label for="ordre" class="col-xs-offset-2 col-xs-2 control-label">Thème</label>
            {%if form_errors(form.theme) %}
                <div class="col-xs-3 input-group has-error has-feedback">
                {% else %}
                    <div class="col-xs-3 input-group">
                    {% endif %}
                    {{ form_widget(form.theme, { 'attr': {'class': 'form-control ', 'placeholder': 'Thème'} }) }}
                </div>
            </div> 

            <div class="form-group">
                <label for="ordre" class="col-xs-offset-2 col-xs-2 control-label">Sous-thème</label>
                {%if form_errors(form.sousTheme) %}
                    <div class="col-xs-3 input-group has-error has-feedback">
                    {% else %}
                        <div class="col-xs-3 input-group">
                        {% endif %}
                        {{ form_widget(form.sousTheme, { 'attr': {'class': 'form-control ', 'placeholder': 'Sous-thème'} }) }}
                    </div>
                </div> 

                <div class="form-group">
                    <label for="ordre" class="col-xs-offset-2 col-xs-2 control-label">Destinataire</label>
                    {%if form_errors(form.destinataire) %}
                        <div class="col-xs-3 input-group has-error has-feedback">
                        {% else %}
                            <div class="col-xs-3 input-group">
                            {% endif %}
                            {{ form_widget(form.destinataire, { 'attr': {'class': 'form-control ', 'placeholder': 'Destinataire'} }) }}
                        </div>
                    </div> 

                    <div class="form-group">
                        <label for="ordre" class="col-xs-offset-2 col-xs-2 control-label">Nombre de jours prévus</label>
                        {%if form_errors(form.echeance) %}
                            <div class="col-xs-3 input-group has-error has-feedback">
                            {% else %}
                                <div class="col-xs-3 input-group">
                                {% endif %}
                                {{ form_widget(form.echeance, { 'attr': {'class': 'form-control ', 'placeholder': 'nombre de jours prévus'} }) }}
                            </div>
                        </div> 

                        <div class="form-group">
                            <label for="ordre" class="col-xs-offset-2 col-xs-2 control-label">Objet</label>
                            {%if form_errors(form.objet) %}
                                <div class="col-xs-3 input-group has-error has-feedback">
                                {% else %}
                                    <div class="col-xs-3 input-group">
                                    {% endif %}
                                    {{ form_widget(form.objet, { 'attr': {'class': 'form-control ', 'placeholder': 'Objets'} }) }}
                                </div>
                            </div> 

                            <div class="form-group">
                                <label for="ordre" class="col-xs-offset-2 col-xs-2 control-label">Corps</label>
                                {%if form_errors(form.corps) %}
                                    <div class="col-xs-3 input-group has-error has-feedback">
                                    {% else %}
                                        <div class="col-xs-3 input-group">
                                        {% endif %}
                                        {{ form_widget(form.corps, { 'attr': {'rows':10, 'class': 'form-control ', 'placeholder': 'Corps'} }) }}
                                    </div>
                                </div> 

                                <div class="hide">
                                    {{ form_rest(form) }}
                                </div>


                                <div class="form-group">
                                    <div class="col-xs-offset-4 col-xs-7">
                                        <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Enregister</button>
                                        <a class="btn btn-danger" href="{{ path('soustheme') }}"><i class="fa fa-power-off"></i> Annuler</a>
                                    </div>
                                </div>

                                </form>


                            {% endblock content %}
