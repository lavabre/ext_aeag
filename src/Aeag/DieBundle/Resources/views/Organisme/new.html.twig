{% extends "AeagDieBundle::layout.html.twig" %}

{% block contenu %}

<div align="center">
    <h1>Création d'un organisme </H1>
</div>
<br>

<form class="form" action="{{ path('organisme_create') }}" method="post" {{ form_enctype(form) }}>
     {{ form_errors(form) }}

        <table  align="center">
             <tr>
                <td align="left">{{ form_label(form.ordre, "N° ordre") }}</td>
                <td width="85%">
                    {% if form_errors(form.ordre) | length %}
                        <span class="relative"> 
                        {{ form_widget(form.ordre, { 'attr': {'class': 'full-width error'} }) }}
                                <span class="check-error"></span>
                    {% else %}
                    {{ form_widget(form.ordre, { 'attr': {'class': 'full-width'} }) }}
                    {% endif %}  
                </td>
                <td nowrap><div class="symfony-form-errors">{{ form_errors(form.ordre) }}</div></td>
           </tr>
            <tr>
                <td align="left">{{ form_label(form.organisme, "Organisme") }}</td>
                <td width="85%">
                    {% if form_errors(form.organisme) | length %}
                        <span class="relative"> 
                        {{ form_widget(form.organisme, { 'attr': {'class': 'full-width error'} }) }}
                                <span class="check-error"></span>
                    {% else %}
                    {{ form_widget(form.organisme, { 'attr': {'class': 'full-width'} }) }}
                    {% endif %}  
                </td>
                <td nowrap><div class="symfony-form-errors">{{ form_errors(form.organisme) }}</div></td>
           </tr>
        </table>
        <br><br>
        {{ form_rest(form) }}

        <div  align="center">
            <button   class="button blue" type="submit">Créer</button>
        </div>
 </form>
<br>
<br>
<table align="center">
    <tr>
        <td>
            <a class="button blue" href="{{ path('organisme') }}">
                <img src="{{ asset('bundles/aeagdie/images/icons/web-app/24/back.png') }}">  
                Retour
            </a>
        </td>
    </tr>
</table>

{% endblock %}
