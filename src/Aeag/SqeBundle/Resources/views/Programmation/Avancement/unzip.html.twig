 <div class="modal fade" id="modal_fichiers" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title text-center" id="myModalLabel">
                                    {% block modal_fichiers_header %}
                                      {{ suiviPrel.prelev.station.code }} {{ suiviPrel.prelev.station.libelle }}<br/>
                                      Date prélèvement {{ suiviPrel.datePrel | date("d/m/Y H:i") }}<br/>
                                      Fichiers disponibles
                                    {% endblock modal_fichiers_header %}</h4>
                            </div>
                            <div class="modal-body">
                            {% block modal_fichiers_body %}
                                  <table class="table table-bordered table-condensed table-advance" id="idTable_fichiers">
                                        <thead>
                                            <tr>
                                                <th width="5%">Actions</th>
                                                <th>Fichier</th>
                                             </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td align="center" nowrap>
                                                    <a  class="btn btn-success" href="{{path('AeagSqeBundle_suiviHydrobio_lot_periode_station_demande_suivi_fichier_telecharger',{'suiviPrelId': suiviPrel.id })}}" title="Voir le fichier">
                                                        <i class="fa fa-upload"></i> 
                                                    </a>
                                                </td>
                                                <td>{{ fichier }}</td>
                                               </tr>
                                            {% for fic in fichiers %}
                                            <tr>
                                                <td align="center" nowrap>
                                                    <a  class="btn btn-info btn-telecharger" target="_blank" href="{{ asset('fichiers/') }}{{ fic.fichier }}" title="Voir le fichier">
                                                        <i class="fa fa-eye"></i> 
                                                    </a>
                                                </td>
                                                <td>{{ fic.fichier }}</td>
                                               </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                            {% endblock modal_fichiers_body %}
                        </div>
                        <div class="modal-footer">
                            {% block modal_fichiers_footer %}
                                <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                            {% endblock modal_fichiers_footer %}
                        </div>
                    </div>
                </div>
            </div>

