  <div class="col-md-12">
    <div id="idtableau_global">
        <table class="table table-bordered table-condensed table-advance" id="idTable_lot_prestataire">
            <thead>
                <tr>
                    <th width="5%">Milieu</th>
                    <th width="5%">Marche</th>
                    <th width="5%">Lot</th>
                    <th width="5%">Prestataire</th>
                    <th width="5%">Période</th>
                    <th width="1%">Version</th>
                    <th width="1%">Nb rendus</th>
                    <th width="1%">Nb attendus</th>
                    </tr>
               <tr>
                   <td></td>
                   <td></td>
                   <td></td>
                   <td></td>
                   <td></td>
                   <td></td>
                   <td></td>
                   <td></td>
                </tr>
            </thead>
            <tbody>
                {% if tableau| length %}
                  {% for ligne  in tableau %}
                      <tr>
                          <td>{{ ligne.nom_milieu }}</td>
                          <td>{{ ligne.nom_marche }}</td>
                          <td>{{ ligne.lot }}</td>
                          <td>{{ ligne.presta }}</td>
                           <td>{{ ligne.label_periode }}</td>
                           <td class="text-right">{{ ligne.version  | number_format(0,'.',' ')  }}</td>
                            <td class="text-right">{{ ligne.nb_rendus  | number_format(0,'.',' ')}}</td>
                          <td class="text-right">{{ ligne.nb_attendus | number_format(0,'.',' ') }}</td>
                      </tr>
                   {% endfor %}
                {% endif %}
            </tbody>
        </table> 
    </div>
</div>
 
<script type="text/javascript" language="javascript">

    jQuery(document).ready(function () {
        var tableLotPrestataire =  $('#idTable_lot_prestataire').DataTable(
                                                    {"stateSave": false,
                                                        "order": [[ 0, "asc" ]],
                                                         "oLanguage": {
                                                            "sSearch": "Filtre",
                                                            "sFirst": "1ere page",
                                                            "sLast": "Dernière page",
                                                            "sNext": "Prochaine page",
                                                            "sPrevious": "Page précédente",
                                                            "EmptyTable": "Pas de données",
                                                            "sInfo": "Nombre d'enregistrements :  _TOTAL_",
                                                            "sInfoFiltered": " - filtrés sur _MAX_ enregistrements",
                                                            "sZeroRecords": "Pas d'enregistrement à afficher",
                                                            "sInfoEmpty": "Pas d'enregistrement à afficher",
                                                            "sInfoThousands": " ",
                                                            "sLengthMenu": 'Afficher <select>' +
                                                                    '<option value="10">10</option>' +
                                                                    '<option value="20">20</option>' +
                                                                    '<option value="30">30</option>' +
                                                                    '<option value="40">40</option>' +
                                                                    '<option value="50">50</option>' +
                                                                    '<option value="-1">Tous</option>' +
                                                                    '</select> enregistrements',
                                                            "sPaginationType": "full_numbers"
                                                        }
                                                       }
                                                 );

         $("#idTable_lot_prestataire thead td").each( function ( i ) {

                        if ( i != 5 && i != 6 && i != 7){
                                var select = $('<select><option value=""></option></select>')
                                .appendTo( $(this).empty() )
                                .on( 'change', function () {
                                tableLotPrestataire.column( i )
                                .search( $(this).val() )
                                .draw();
                                });

                                tableLotPrestataire.column( i ).data().unique().sort().each( function ( d, j ) {
                                select.append( '<option value="'+d+'">'+d+'</option>' )
                                });
                        };
          }); 

    });

</script>