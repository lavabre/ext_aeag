<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="ModalLabel_milieu_groupe_paramtres">
      paramètres du groupe {{ groupe.groupe.codeGrp}} {{ groupe.groupe.libelleGrp}}
    </h4>
</div>
<div class="modal-body-sqe">
     <div class="row">
         <div class="col-md-offset-1 col-md-10">
              <div  class="small">
                 <table class="table table-bordered table-condensed table-advance" id="idTableMilieuGroupeParametres">
                       <thead>
                          <tr>
                               <th>Code</th>
                               <th>Libelle</th>
                               <th>Fraction</th>
                               <th>Unité</th>
                               <th width="10%">Defaut</th>
                             </tr>
                       </thead>
                       <tbody>
                           {% for parametre in groupe.parametres %}
                                 <tr>
                                   <td width='5%'>{{ parametre.pgSandreParametre.codeParametre }}</td>
                                   <td>{{ parametre.pgSandreParametre.nomParametre }}</td>
                                   <td>{% if parametre.pgSandreFraction | length %}
                                       {{ parametre.pgSandreFraction.nomFraction }}
                                       {% endif %}
                                   </td>
                                   <td>{%if parametre.pgSandreUnite | length %}
                                       {{ parametre.pgSandreUnite.nomUnite }}
                                       {% endif %}
                                   </td>
                                   <td width='1%'>{{ parametre.pgProgGrparRefLstParam.paramDefaut }}</td>
                                  </tr>
                            {% endfor %}
                       </tbody>
                    </table>
           </div>
         </div>
       </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">
         <i class="fa fa-undo"> Fermer</i>
    </button>
</div>

<script>
      tableMilieuGroupeParametres =     $('#idTableMilieuGroupeParametres').DataTable(
                         { "stateSave": false,
                            "order": [[ 1, "asc" ]],
                            "oLanguage": {
                             "sSearch": "Filtre",
                             "sFirst": "1ere page",
                             "sLast": "Dernière page",
                             "sNext": "Prochaine page",
                             "sPrevious": "Page précédente",
                             "EmptyTable": "Pas de données",
                             "sInfo": "Nombre d'enregistrements :  _TOTAL_",
                             "sInfoFiltered": " - filtrés sur _MAX_ enregistrements",
                             "sZeroRecords": "Pas d'enregistrement à afficher",
                             "sInfoEmpty": "Pas d'enregistrement à afficher",
                             "sInfoThousands": " ",
                             "sLengthMenu": 'Afficher <select>' +
                                     '<option value="10">10</option>' +
                                     '<option value="20">20</option>' +
                                     '<option value="30">30</option>' +
                                     '<option value="40">40</option>' +
                                     '<option value="50">50</option>' +
                                     '<option value="-1">Tous</option>' +
                                     '</select> enregistrements',
                             "sPaginationType": "full_numbers"
                         }
                        }
                       );

</script>