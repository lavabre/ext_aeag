{% extends "AeagSqeBundle::layout.html.twig" %}

{%  block breadcrumb %}
    <li>
        <i class="icon-home"></i>
        <a href="{{ path('aeag_homepage') }}">Accueil</a> 
    </li>
    <li>
        <i class="icon-home"></i>
        <a href="{{ app.session.get('niveau1') }}">Zones geographiques</a> 
    </li>
    <li>
        <i class="icon-home"></i>
        <a href="{{ app.session.get('niveau2') }}">Sations de mesure</a> 
    </li>
    <li class="active">
        Sites de prélèvement
    </li>
{% endblock breadcrumb %}


{%block panel_heading %}
    <h3 class="page-title">
        Liste des sites de prélèvement de la station : {{ pgRefStationMesure.code }} {{ pgRefStationMesure.libelle }}
        {# <a class="btn btn-primary pull-right" href="{{ path('AeagDecBundle_admin_pdfListeDechets') }}" title="Imprimer la lister"> 
                <i class="fa fa-print"> Imprimer la liste</i>
         </a>#}
    </h3>
{%endblock panel_heading %}



{%block content %}


    <div class="row">
        <div class="col-xm-12">
            <div class="small">
                <table class="table table-bordered table-condensed table-advance" id="idTable">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Nom</th>
                            <th>Support</th>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td>{{ entity.pgRefSitePrelevement.codeSite }}</td>
                                <td>{{ entity.pgRefSitePrelevement.nomSite }}</td>
                                <td>
                                    {% if entity.pgSandreSupport %}
                                        {{ entity.pgSandreSupport.nomSupport }}
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{%endblock content %}


{% block scripts %}

    // DataTable
    var table = $('#idTable').DataTable(
    {"stateSave": false,
    "oLanguage": {
    "sSearch": "Filtre",
    "sFirst": "1ere page",
    "sLast": "Dernière page",
    "sNext": "Prochaine page",
    "sPrevious": "Page précédente",
    "EmptyTable": "Pas de données",
    "sInfo": "Nombre d'enregistrements :  _TOTAL_",
    "sInfoFiltered": " - filtrés sur _MAX_ enregistrements",
    "sZeroRecords": "Pas d'enregistrement à afficher",
    "sInfoEmpty": "Pas d'enregistrement à afficher",
    "sInfoThousands": " ",
    "sLengthMenu": 'Afficher <select>' +
        '<option value="10">10</option>' +
        '<option value="20">20</option>' +
        '<option value="30">30</option>' +
        '<option value="40">40</option>' +
        '<option value="50">50</option>' +
        '<option value="-1">Tous</option>' +
        '</select> enregistrements',
    "sPaginationType": "full_numbers"
    }
    }
    );

    $("#idTable thead td").each( function ( i ) {

    if ( i != 4){
    var select = $('<select><option value=""></option></select>')
    .appendTo( $(this).empty() )
    .on( 'change', function () {
    table.column( i )
    .search( $(this).val() )
    .draw();
    } );

    table.column( i ).data().unique().sort().each( function ( d, j ) {
    select.append( '<option value="'+d+'">'+d+'</option>' )
    } );
    };
    } );

{% endblock scripts %}
