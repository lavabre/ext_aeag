    jQuery(document).ready(function() {
    
        var table = $('#idTable_demandes').DataTable(
            {"stateSave": true,
             "order": [[ 1, "desc" ]],
            "language": {
                                 "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"
                             },
            "aLengthMenu": [
                                        [10, 25, 50, 100, -1],
                                        [10, 25, 50, 100, "Tous"]
                                    ],
              "iDisplayLength": 10
