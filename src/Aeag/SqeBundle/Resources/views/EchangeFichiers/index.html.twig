{% extends "AeagSqeBundle::layout.html.twig" %}

{% block breadcrumb %}
    <li>
        <a href="{{ path('aeag_homepage') }}">Accueil</a> 
    </li>
    <li class="active">
          Echange de fichiers
    </li>
{% endblock breadcrumb %} 

{%block panel_heading %}
    <h3 class="page-title">
        Echange de fichiers - Liste des lots
    </h3>
{%endblock panel_heading %}

{%block content %}
    <div class="form-body">        
        <table class="table table-bordered table-condensed table-advance" id="idTable_lot">
            <thead>
                <tr>
                    <th width="5%">Actions</th>
                    <th>Nom</th>
                    <th>Année de programmation</th>
                    <th>Marché</th>
                    <th>Zone géographique</th>
                    <th>Type de milieu</th>
                    <th>Mandataire</th>
                </tr>
                <tr class="filtre">
                    <th></th>
                    <th></th>
                    <th class="choice"></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                 {%if lotans | length%} 
                    {% for lotan in lotans %}
                        <tr>
                            <td>
                                <a id="id_{{lotan.0.id}}_{{lotan.anneeProg}}" class="btn btn-primary btn-demandes" href="{{path('AeagSqeBundle_echangefichiers_demandes',{ 'lotId': lotan.0.id, 'anneeProg': lotan.anneeProg})}}" title="Consulter les demandes">
                                    <i class="fa fa-eye"></i> 
                                </a>
                            </td>
                            <td nowrap>{{lotan.0.nomLot}}</td>
                            <td>{{ lotan.anneeProg }}</td>
                            <td>{{ lotan.0.marche.nomMarche }}</td>
                            <td>{{ lotan.0.zgeoRef.nomZoneGeo }}</td>
                            <td>{% if lotan.0.codeMilieu| length %}
                                {{ lotan.0.codeMilieu.nomMilieu }}
                                {% endif %}
                            </td>
                            <td>{%if lotan.0.titulaire %}
                                {{ lotan.0.titulaire.nomCorres }}
                                {% endif %}
                            </td>
                        </tr>
                        
                    {% endfor %}
                {% endif %}
            </tbody>
        </table>
    </div>
{%endblock content %}    

{% block scripts %}

    $(document).ready(function() {
        $('#modalTraitementEncours').modal('hide');
          var table = $('#idTable_lot').DataTable(
            {"stateSave": true,
             "order": [[ 1, "desc" ]],
            "oLanguage": {
            "sSearch": "Filtre",
            "sFirst": "1ere page",
            "sLast": "Dernière page",
            "sNext": "Prochaine page",
            "sPrevious": "Page précédente",
            "EmptyTable": "Pas de données",
            "sInfo": "Nombre d'enregistrements :  _TOTAL_",
            "sInfoFiltered": " - filtrés sur _MAX_ enregistrements",
            "sZeroRecords": "Pas d'enregistrement à afficher",
            "sInfoEmpty": "Pas d'enregistrement à afficher",
            "sInfoThousands": " ",
            "sLengthMenu": 'Afficher <select>' +
                '<option value="10">10</option>' +
                '<option value="20">20</option>' +
                '<option value="30">30</option>' +
                '<option value="40">40</option>' +
                '<option value="50">50</option>' +
                '<option value="-1">Tous</option>' +
                '</select> enregistrements',
            "sPaginationType": "full_numbers"
            }
            }
            );
            $("#idTable_lot thead tr.filtre th").each( function ( i ) {
                if ($(this).hasClass('choice')) {
                    var select = $('<select><option value=""></option></select>')
                    .appendTo( $(this).empty() )
                    .on( 'change', function () {
                        table.column( i ).search( $(this).val() ).draw();
                    } );

                    table.column( i ).data().unique().sort().each( function ( d, j ) {
                        select.append( '<option value="'+d+'">'+d+'</option>' );
                    } );
                }
            });
            
            $(".btn-demandes").click(function() {
                $('#modalTraitementEncours').modal();
            });
    });
    
{%endblock scripts %}    
    