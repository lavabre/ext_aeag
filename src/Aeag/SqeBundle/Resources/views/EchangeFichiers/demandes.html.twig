{% extends "AeagSqeBundle::layout.html.twig" %}

{% block breadcrumb %}
    <li>
        <a href="{{ path('aeag_homepage') }}">Accueil</a> 
    </li>
    <li>
           <a href="{{ path('AeagSqeBundle_echangefichiers_index') }}">Echange de fichiers</a> 
    </li>
    <li class="active">
          Demandes
    </li>
{% endblock breadcrumb %} 

{%block panel_heading %}
    <h3 class="page-title">
        Echange de fichiers - Liste des demandes
    </h3>
{%endblock panel_heading %}

{%block content %}
    <div class="form-body">        
        <table class="table table-bordered table-condensed table-advance" id="idTable_demandes">
            <thead>
                <tr>
                    <th width="5%">Actions</th>
                    <th>Date de la demande</th>
                    <th>Année de programmation</th>
                    <th>Code de la demande</th>
                    <th>Nom du lot</th>
                    <th>Producteur</th>
                    <th>Phase de la demande</th>
                </tr>
            </thead>
            <tbody>
                 {%if demandes | length%} 
                    {% for demande in demandes %}
                       <tr>
                            <td align="center" nowrap>
                                <a id="id_{{demande.id}}" class="btn btn-success btn-telecharger" href="{{path('AeagSqeBundle_echangefichiers_telecharger',{'demande' : demande.id})}}" title="Télécharger la demande">
                                    <i class="fa fa-download"></i> 
                                </a>
                                <a id="id_{{demande.id}}" class="btn btn-primary" href="{{path('AeagSqeBundle_echangefichiers_telecharger')}}" title="Voir les réponses">
                                    <i class="fa fa-eye"></i> 
                                </a>
                            </td>
                            <td>{{ demande.dateDemande | date("d/m/Y H:i")}}</td>
                            <td>{{ demande.anneeProg }}</td>
                            <td>{{ demande.codeDemandeCmd }}</td>
                            <td>{{ demande.lotan.lot.nomLot }}</td>
                            <td>{{ demande.commanditaire.nomCorres }}</td>
                            <td>{{ demande.phaseDemande.libellePhase }}</td>
                        </tr>
                    {% endfor %}
                {% endif %}
            </tbody>
        </table>

    </div>
{%endblock content %}    

{% block scripts %}
    jQuery(document).ready(function() {
        var table = $('#idTable_demandes').DataTable(
            {"stateSave": true,
             "order": [[ 1, "desc" ]],
            "oLanguage": {
            "sSearch": "Filtre",
            "sFirst": "1ere page",
            "sLast": "Dernière page",
            "sNext": "Prochaine page",
            "sPrevious": "Page précédente",
            "EmptyTable": "Pas de données",
            "sInfo": "Nombre d'enregistrements :  _TOTAL_",
            "sInfoFiltered": " - filtrés sur _MAX_ enregistrements",
            "sZeroRecords": "Pas d'enregistrement à afficher",
            "sInfoEmpty": "Pas d'enregistrement à afficher",
            "sInfoThousands": " ",
            "sLengthMenu": 'Afficher <select>' +
                '<option value="10">10</option>' +
                '<option value="20">20</option>' +
                '<option value="30">30</option>' +
                '<option value="40">40</option>' +
                '<option value="50">50</option>' +
                '<option value="-1">Tous</option>' +
                '</select> enregistrements',
            "sPaginationType": "full_numbers"
            }
            }
            );

            $("#idTable thead td").each( function ( i ) {

            if (i != 0){
            var select = $('<select><option value=""></option></select>')
            .appendTo( $(this).empty() )
            .on( 'change', function () {
            table.column( i )
            .search( $(this).val() )
            .draw();
            });

            table.column( i ).data().unique().sort().each( function ( d, j ) {
                select.append( '<option value="'+d+'">'+d+'</option>' )
            });
            };
            }); 
            
        $('.btn-telecharger').click(function (){
            setTimeout("window.location.reload()",2000);//or other value
        });
    });
    
{%endblock scripts %}    