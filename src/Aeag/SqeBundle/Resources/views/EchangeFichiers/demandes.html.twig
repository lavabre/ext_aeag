{% extends "AeagSqeBundle::layout.html.twig" %}

{% block breadcrumb %}
    <li>
        <a href="{{ path('aeag_homepage') }}">Accueil</a> 
    </li>
    <li>
           <a href="{{ path('AeagSqeBundle_echangefichiers_index') }}">Echange de fichiers</a> 
    </li>
    <li class="active">
          Demandes
    </li>
{% endblock breadcrumb %} 

{%block panel_heading %}
    <h3 class="page-title">
        Echange de fichiers - Liste des DAI - {{ lotan.lot.nomLot }} - {{ lotan.anneeProg }}
    </h3>
{%endblock panel_heading %}

{%block content %}
    <div class="form-body">        
        <table class="table table-bordered table-condensed table-advance" id="idTable_demandes">
            <thead>
                <tr>
                    <th width="5%">Actions</th>
                    <th>Date</th>
                    <th>Code</th>
                    <th>Prestataire</th>
                    <th>Producteur</th>
                    <th>Période</th>
                    <th>Phase</th>
                    <th>Format fichier</th>
                    <th>Réponses</th>
                </tr>
            </thead>
            <tbody>
                 {%if demandes | length%} 
                    {% for demande in demandes %}
                       {% if demande.prestataire == user.prestataire %} 
                       <tr style="background-color: #aac3f1">
                        {% else %}
                            <tr>
                        {% endif %}
                            <td align="center" nowrap>
                                <a id="id_{{demande.id}}" class="btn btn-success btn-telecharger" href="{{path('AeagSqeBundle_echangefichiers_telecharger',{'demandeId' : demande.id})}}" title="Télécharger la DAI">
                                    <i class="fa fa-download"></i> 
                                </a>
                            </td>
                            <td>{{ demande.dateDemande | date("d/m/Y H:i")}}</td>
                            <td>{{ demande.codeDemandeCmd }}</td>
                            <td>{{ demande.prestataire.nomCorres }}</td>
                            <td>{{ demande.commanditaire.nomCorres }}</td>
                            {% if demande.periode %}
                                <td>{{ demande.periode.labelPeriode}}</td>
                            {% else %}
                                <td>An</td>
                            {% endif%}
                            <td>{{ demande.phaseDemande.libellePhase }}</td>
                            <td>{{ demande.formatFichier }}</td>
                            <td align="center" nowrap>
                                <a id="{{demande.id}}"  {%if demande.phaseDemande.id >= 10 and demande.phaseDemande.id < 13%}class="btn btn-primary btn-voir-reponses"{%elseif demande.phaseDemande.id == 13%}class="btn btn-info btn-voir-reponses"{% elseif demande.phaseDemande.id >= 14%}class="btn btn-success btn-voir-reponses"{%endif%} data-toggle="modal" href="#" title="Voir les RAI">
                                    {% if reponses[demande.id] | length == 0 and reponsesMax[demande.id] | length == 0 %}
                                        <span class="badge">0</span>
                                    {% else %}
                                        <span class="badge">{{ reponses[demande.id] | length}} / {{ reponsesMax[demande.id] | length}}</span>
                                    {% endif %}
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                {% endif %}
            </tbody>
        </table>

    </div>
{%endblock content %}    

{% block modal %}
    <div class="modal fade" id="modal_reponses">
        <div class="modal-dialog modal-lg">
            <div class="modal-content" id="modal-reponses-content">
            </div>
        </div>
    </div>
{%endblock modal %}

{% block scripts %}
    jQuery(document).ready(function() {
        var table = $('#idTable_demandes').DataTable(
            {"stateSave": true,
             "order": [[ 1, "desc" ]],
            "oLanguage": {
            "sSearch": "Filtre",
            "sFirst": "1ere page",
            "sLast": "Dernière page",
            "sNext": "Prochaine page",
            "sPrevious": "Page précédente",
            "EmptyTable": "Pas de données",
            "sInfo": "Nombre d'enregistrements :  _TOTAL_",
            "sInfoFiltered": " - filtrés sur _MAX_ enregistrements",
            "sZeroRecords": "Pas d'enregistrement à afficher",
            "sInfoEmpty": "Pas d'enregistrement à afficher",
            "sInfoThousands": " ",
            "sLengthMenu": 'Afficher <select>' +
                '<option value="10">10</option>' +
                '<option value="20">20</option>' +
                '<option value="30">30</option>' +
                '<option value="40">40</option>' +
                '<option value="50">50</option>' +
                '<option value="-1">Tous</option>' +
                '</select> enregistrements',
            "sPaginationType": "full_numbers"
            }
            }
            );

            $("#idTable_demandes thead td").each( function ( i ) {

            if (i != 0){
            var select = $('<select><option value=""></option></select>')
            .appendTo( $(this).empty() )
            .on( 'change', function () {
            table.column( i )
            .search( $(this).val() )
            .draw();
            });

            table.column( i ).data().unique().sort().each( function ( d, j ) {
                select.append( '<option value="'+d+'">'+d+'</option>' )
            });
            };
            }); 
            
        $('.btn-telecharger').click(function (){
            setTimeout("window.location.reload()",2000);//or other value
        });
        
        $('.btn-voir-reponses').click(function (){
            $('#modalTraitementEncours').modal();
            var url = '{{ path("AeagSqeBundle_echangefichiers_reponses",{"demandeId":  "par1" }) }}';
            url = url.replace("par1", $(this).attr('id'));
            $.ajax({
                url: url,
                type: 'get',
                success: function(html) {
                    $('#modal-reponses-content').empty().append(html);
                    $('#modalTraitementEncours').modal('hide');
                    $('#modal_reponses').modal();
                }
            });
            
        });
    });
    
{%endblock scripts %}    